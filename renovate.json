{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "matchManagers": ["npm"],
      "matchDepTypes": ["dependencies", "devDependencies", "optionalDependencies"],
      "rangeStrategy": "pin",
      "minimumReleaseAge": "3 days",
      "automerge": "true"
    },
    {
      "matchPackagePatterns": "^@angular/",
      "groupName": "Angular",
      "groupSlug": "angular"
    }
  ]
}
